{
    "title": "Kwikset Smart Locks",
    "config": {
        "step": {
            "user": {
                "title": "Sign in to Kwikset",
                "description": "Enter your Kwikset account credentials.",
                "data": {
                    "email": "[%key:common::config_flow::data::email%]",
                    "password": "[%key:common::config_flow::data::password%]"
                }
            },
            "select_home": {
                "title": "Select Home",
                "description": "Choose which Kwikset home to configure.",
                "data": {
                    "conf_home_id": "Home"
                }
            },
            "reauth_confirm": {
                "title": "[%key:common::config_flow::title::reauth%]",
                "description": "The Kwikset integration needs to re-authenticate your account. Please enter your credentials.",
                "data": {
                    "email": "[%key:common::config_flow::data::email%]",
                    "password": "[%key:common::config_flow::data::password%]"
                }
            },
            "reconfigure": {
                "title": "Reconfigure Kwikset",
                "description": "This will reload the integration and discover any new devices that have been added to your Kwikset home."
            }
        },
        "error": {
            "cannot_connect": "[%key:common::config_flow::error::cannot_connect%]",
            "invalid_auth": "[%key:common::config_flow::error::invalid_auth%]",
            "unknown": "[%key:common::config_flow::error::unknown%]"
        },
        "abort": {
            "already_configured": "[%key:common::config_flow::abort::already_configured_device%]",
            "reauth_successful": "[%key:common::config_flow::abort::reauth_successful%]",
            "no_available_homes": "No available homes to configure"
        }
    },
    "options": {
        "step": {
            "init": {
              "data": {
                "refresh_interval":  "How often the integration will poll the device in seconds",
                "refresh_devices": "Reload integration to discover new devices"
              },
                "description": "Configure Kwikset options"
            }
        }
    }
}